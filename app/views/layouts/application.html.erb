<!DOCTYPE html>
<html>
<head>
  <title>Rent-A-Driveway</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  
<!--  <%= stylesheet_link_tag    'https://maxcdn.bootstrapcdn.com/bootstrap/3.3.2/css/bootstrap.min.css' %>-->
<!--  <%= stylesheet_link_tag    'https://maxcdn.bootstrapcdn.com/bootstrap/3.3.2/css/bootstrap-theme.min.css' %> -->
  <%= javascript_include_tag 'https://maxcdn.bootstrapcdn.com/bootstrap/3.3.2/js/bootstrap.min.js' %>

  <%= csrf_meta_tags %>
</head>
<body>
<div id="content">

  <div id="header">
    <div class="topong">
      <div class="pad"> <%= image_tag("account.gif", alt:"Account") %>
        <h4><a href="../users/sign_in">MY ACCOUNT</a></h4>
        <br />
        <span class="txt">View your account</span> </div>
    </div>
    <h1><span class="green bigl">R</span>ent-A-<span class="green bigl">D</span>riveway</h1>
    <span class="slogan">Rent parking space near you!</span> </div>
  <div id="menu">
    <div class="pad">
      <div class="submit">
        <ul>
          <li><a href="../welcome/index"><span>HOME</span></a></li>
          <li><a href="../welcome/aboutus"><span>ABOUT US</span></a></li>
          <% if user_signed_in? %>
            <% if is_seller(current_user) %>
              <li>
                <span><%= link_to('Sell', '/listings/new') %></span>
              </li>
            <% end %>
            <% if is_buyer(current_user) %>
              <li>
                <%= link_to('Buy', '/listings') %>
              </li>
            <% end %>
            <li>
              <span><%= link_to('Logout', destroy_user_session_path, :method => :delete) %></span>
            </li>
          <% else %>
            <li>
              <span><%= link_to('Login', new_user_session_path) %></span>
            </li>
          <% end %>
        </ul>
      </div>
    </div>
  </div>
    <%= yield %>
  <div id="footer">
    <p class="right">Copyright &copy; 2015 Chris, Minh Quan, Yuuma, John</p>
    <p><a href="../welcome/index">Home</a> &middot; <a href="../welcome/aboutus">About Us</a><br />
    </p>
  </div>
</div>
</body>
</html>
