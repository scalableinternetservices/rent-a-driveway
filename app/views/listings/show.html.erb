<script src="//maps.google.com/maps/api/js?v=3.13&amp;sensor=false&amp;libraries=geometry" type="text/javascript"></script>
<script src='//google-maps-utility-library-v3.googlecode.com/svn/tags/markerclustererplus/2.0.14/src/markerclusterer_packed.js' type='text/javascript'></script>

<table>
  <tr>
    <th>Start Time</th>
    <th>End Time</th>
    <th>Price</th>
  </tr>
  <tr>
    <td><%= @listing.start_time.strftime("%B %e %Y %l:00") %></td>
    <td><%= @listing.end_time.strftime("%B %e %Y %l:00") %></td>
    <td><%= @listing.price %></td>
  </tr>
</table>
<div>
  View Count: <%= @listing_analytics.view_count %>
</div>
<% if user_can_buy(current_user, @listing) %>
  <%= button_to "Buy", new_transaction_path(:listing_id => @listing.id, :seller_id => @listing.owner_id) %>
<% end %>

<% if is_admin(current_user) && !@listing_analytics_locations.blank? %>
  <table>
    <tr>
      <th>IP</th>
      <th>Latitude</th>
      <th>Longitude</th>
    </tr>
    <% @listing_analytics_locations.each do |locations| %>
      <tr>
        <td>TODO@yuuma</td>
        <td><%= locations.latitude %></td>
        <td><%= locations.longitude %></td>
      </tr>
    <% end %>
  </table>
<% end %>

<div id="map" style="height: 500px;"></div>

<script type="text/javascript">
handler = Gmaps.build('Google');
handler.buildMap({ provider: { Zoom: 15 }, internal: {id: 'map'}}, function(){
  markers = handler.addMarkers(<%= raw @hash.to_json %>);
  handler.bounds.extendWith(markers);
  handler.map.centerOn(markers[0]);
});
</script>

