<h1>All Listings</h1>
 
<%= link_to 'New listing', new_listing_path %>

<table>
  <tr>
    <th>Start Time</th>
    <th>End Time</th>
    <th>Price</th>
  </tr>
 
  <% @listing.each do |listing| %>
    <tr>
      <td><%= listing.start_time %></td>
      <td><%= listing.end_time %></td>
      <td><%= listing.price %></td>
      <td><%= link_to 'Details', listing_path(listing) %></td>
      <% if current_user.try(:is_seller) && listing.owner_id == current_user.id%>
        <td><%= link_to 'Edit', edit_listing_path(listing) %></td>
        <td><%= link_to 'Destroy', listing_path(listing),
            method: :delete,
            data: { confirm: 'Are you sure?' } %></td>
      <% end %>
    </tr>
  <% end %>
</table>
